<h1 class="mb-4"><%= t('questions.edit.edit_question') %></h1>
<div class='article'>
  <div class="card-body bg-dark text-white">
    <%= form_with model: @question do |f| %>
      <div class="mb-3 row">
        <%= f.label t("questions.edit.edit_title"), class: "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-10">
          <%= f.text_field :title, required: true, minlegth: 5, placeholder: "Title", class: "form-control" %>
        </div>
      </div>
      <div class="mb-3 row"> 
        <%= f.label t("questions.edit.edit_text"), class: "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-10">
          <%= f.text_area :body, required: true, minlegth: 4, placeholder: "What are you doing?", class: "form-control" %>
        </div>
      </div>
      <%= f.submit t("questions.edit.edit_save"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>